<div class="row">
    <div class="col s12">
        <h1 class="center red-text text-darken-2">Главная</h1>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <h3 class="center">Добро пожаловать в Express Shop!</h3>
    </div>
</div>

<div class="row">
    <div class="col s6 offset-s3">

        <h4 class="center">Анонимный чат:</h4>
        <form action="/send-message" method="POST">
            <div class="input-field">
                <input placeholder="Введите сообщение..." id="message" name='message' type="text" class="validate"
                    required>
                <label for="first_name">Сообщение</label>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="btn btn-primary">Отправить сообщение</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s6 offset-s3">

        {{#if comments.length}}
        {{#each comments }}
        <h5> - {{this}}</h5>
        <hr>
        {{/each}}
        {{else}}
        <p>Комментариев нет...</p>
        {{/if}}
    </div>
</div>