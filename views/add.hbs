<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input placeholder="Введите название" id="title" name="title" type="text" class="validate" required>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input placeholder="Введите цену" id="price" name="price" type="number" class="validate" required min="1" max="10000">
        <span class="helper-text" data-error="Цена должна быть в диапазоне 1 - 10 000 руб."></span>
    </div>

    <div class="input-field">
        <input placeholder="Введите ссылку на картинку" id="img" type="text" name="img" class="validate" required>
        <span class="helper-text" data-error="Введите url картинки"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Добавить курс</button>
</form>